{
  "dashboard_id": "support_ops",
  "title": "Support Operations",
  "description": "Issue drivers, account timeline, fast triage.",
  "allowed_roles": [
    "admin",
    "support_agent",
    "ops_specialist"
  ],
  "default_time_range": {
    "preset": "last_30_days",
    "timezone": "UTC"
  },
  "global_filters": [
    {
      "id": "country",
      "type": "multi_select",
      "dimension": "country"
    },
    {
      "id": "channel",
      "type": "multi_select",
      "dimension": "channel"
    },
    {
      "id": "currency_base",
      "type": "single_select",
      "dimension": "currency_base",
      "default": "USD"
    },
    {
      "id": "kyc_status",
      "type": "multi_select",
      "dimension": "kyc_status"
    }
  ],
  "layout": {
    "type": "grid",
    "breakpoints": {
      "lg": {
        "columns": 12,
        "rowHeight": 16
      },
      "md": {
        "columns": 8,
        "rowHeight": 16
      },
      "sm": {
        "columns": 4,
        "rowHeight": 16
      }
    }
  },
  "theme_support": [
    "light",
    "dark",
    "system"
  ],
  "widgets": [
    {
      "widget_id": "kpi_failed_rate",
      "title": "Txn Failed Rate",
      "viz_type": "kpi_card",
      "query": {
        "metric_id": "support__txn_failed_rate__pct",
        "dimensions": [],
        "measures": [
          "value"
        ]
      },
      "position": {
        "lg": {
          "x": 0,
          "y": 0,
          "w": 3,
          "h": 6
        }
      },
      "format": {
        "kind": "pct"
      }
    },
    {
      "widget_id": "kpi_avg_settle",
      "title": "Avg Transfer Settle",
      "viz_type": "kpi_card",
      "query": {
        "metric_id": "support__transfer_avg_settlement__sec",
        "dimensions": [],
        "measures": [
          "value"
        ]
      },
      "position": {
        "lg": {
          "x": 3,
          "y": 0,
          "w": 3,
          "h": 6
        }
      },
      "format": {
        "kind": "duration"
      }
    },
    {
      "widget_id": "kpi_kyc_pending",
      "title": "KYC Pending",
      "viz_type": "kpi_card",
      "query": {
        "metric_id": "support__kyc_pending_users__count",
        "dimensions": [],
        "measures": [
          "value"
        ]
      },
      "position": {
        "lg": {
          "x": 6,
          "y": 0,
          "w": 3,
          "h": 6
        }
      },
      "format": {
        "kind": "count"
      }
    },
    {
      "widget_id": "kpi_webhook_fail",
      "title": "Webhook Fail Rate",
      "viz_type": "kpi_card",
      "query": {
        "metric_id": "reliability__webhook_failure_rate__pct",
        "dimensions": [],
        "measures": [
          "value"
        ]
      },
      "position": {
        "lg": {
          "x": 9,
          "y": 0,
          "w": 3,
          "h": 6
        }
      },
      "format": {
        "kind": "pct"
      }
    },
    {
      "widget_id": "issue_drivers",
      "title": "Issue drivers",
      "viz_type": "bar_chart",
      "query": {
        "metric_id": "support__issue_drivers",
        "dimensions": [
          "failure_reason"
        ],
        "measures": [
          "value"
        ]
      },
      "position": {
        "lg": {
          "x": 0,
          "y": 6,
          "w": 7,
          "h": 11
        }
      },
      "format": {
        "kind": "count"
      }
    },
    {
      "widget_id": "settlement_latency",
      "title": "Settlement latency",
      "viz_type": "line_chart",
      "query": {
        "metric_id": "ops__settlement_time_p95__sec",
        "time_grain": "day",
        "dimensions": [
          "date"
        ],
        "measures": [
          "value"
        ]
      },
      "position": {
        "lg": {
          "x": 7,
          "y": 6,
          "w": 5,
          "h": 11
        }
      },
      "format": {
        "kind": "duration",
        "unit": "sec"
      }
    },
    {
      "widget_id": "account_timeline",
      "title": "Account timeline (masked)",
      "viz_type": "table",
      "query": {
        "metric_id": "support__account_timeline",
        "dimensions": [
          "event_time",
          "event_type",
          "status"
        ],
        "measures": [
          "detail"
        ]
      },
      "position": {
        "lg": {
          "x": 0,
          "y": 17,
          "w": 12,
          "h": 9
        }
      }
    }
  ]
}