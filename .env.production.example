# SwipeSavvy Production Environment Configuration
# ⚠️ CRITICAL: Use secure secrets management (AWS Secrets Manager, HashiCorp Vault)
# DO NOT store production secrets in .env files in production

NODE_ENV=production
DEBUG=false

# ============================================
# PRODUCTION API ENDPOINTS
# ============================================
VITE_API_BASE_URL=https://api.swipesavvy.com
VITE_API_TIMEOUT=30000

EXPO_PUBLIC_API_URL=https://api.swipesavvy.com
EXPO_PUBLIC_WS_URL=wss://api.swipesavvy.com/ws

# ============================================
# PRODUCTION DATABASE
# ============================================
# Use AWS RDS, Google Cloud SQL, or similar managed database
DB_HOST=your-production-db-host.amazonaws.com
DB_PORT=5432
DB_NAME=swipesavvy_production
DB_USER=swipesavvy_app
DB_PASSWORD=USE_SECRETS_MANAGER
DB_SSL=true

# Production pool sizes
DB_POOL_MAX=50
DB_POOL_MIN=10

# ============================================
# PRODUCTION CACHE
# ============================================
# Use AWS ElastiCache, Redis Cloud, or similar
REDIS_URL=rediss://your-production-redis.amazonaws.com:6379
REDIS_PASSWORD=USE_SECRETS_MANAGER
REDIS_TLS=true

# ============================================
# PRODUCTION SECURITY
# ============================================
JWT_SECRET=USE_SECRETS_MANAGER_MINIMUM_64_CHARACTERS
SESSION_SECRET=USE_SECRETS_MANAGER_MINIMUM_64_CHARACTERS

CORS_ORIGINS=https://admin.swipesavvy.com,https://app.swipesavvy.com

# ============================================
# PRODUCTION MONITORING (REQUIRED)
# ============================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.01

DATADOG_API_KEY=USE_SECRETS_MANAGER
DATADOG_APP_KEY=USE_SECRETS_MANAGER
DATADOG_SITE=datadoghq.com

LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# PRODUCTION AI KEYS
# ============================================
TOGETHER_API_KEY=USE_SECRETS_MANAGER
TOGETHER_API_KEY_GENERAL=USE_SECRETS_MANAGER
TOGETHER_API_KEY_MARKETING=USE_SECRETS_MANAGER

OPENAI_API_KEY=USE_SECRETS_MANAGER

PINECONE_API_KEY=USE_SECRETS_MANAGER
PINECONE_ENVIRONMENT=production
PINECONE_INDEX_NAME=swipesavvy-embeddings-prod
