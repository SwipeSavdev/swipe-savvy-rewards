# Staging Environment Configuration
ENVIRONMENT=staging
NODE_ENV=production
PORT=8000
DEBUG=false

# Security - JWT Configuration (REQUIRED - Set in CI/CD)
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Demo Users Disabled in Staging
DEMO_USERS={}

# API Keys (Set in CI/CD System)
TOGETHER_API_KEY=${TOGETHER_API_KEY}
OPENAI_API_KEY=${OPENAI_API_KEY}

# Database (Set in CI/CD System)
DATABASE_URL=${DATABASE_URL}

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_CHAT=50/minute
RATE_LIMIT_AUTH=3/minute
RATE_LIMIT_USER_CREATION=5/minute
