# AI Agent Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# API Keys
# ============================================
TOGETHER_API_KEY=
OPENAI_API_KEY=sk-...  # Optional, for embeddings

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/swipesavvy_agents
REDIS_URL=redis://localhost:6379/0

# ============================================
# Vector Database (choose one)
# ============================================
# Pinecone
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=swipesavvy-kb

# pgvector (alternative)
PGVECTOR_CONNECTION_STRING=postgresql://postgres:password@localhost:5432/swipesavvy_vectors

# ============================================
# Agent Configuration
# ============================================
AGENT_MODEL=meta-llama/Llama-3.3-70B-Instruct-Turbo
AGENT_MAX_TOKENS=4096
AGENT_TEMPERATURE=0.7
AGENT_TIMEOUT_SECONDS=30

# ============================================
# Environment
# ============================================
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# ============================================
# Security
# ============================================
JWT_SECRET=your-secret-key-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-32-chars-min
SESSION_TIMEOUT_MINUTES=30

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_PER_USER=100  # requests per minute
RATE_LIMIT_PER_IP=200

# ============================================
# Monitoring
# ============================================
DATADOG_API_KEY=
SENTRY_DSN=

# ============================================
# External Services
# ============================================
# Backend API (for tool functions)
BACKEND_API_URL=http://localhost:8080/api/v1
BACKEND_API_KEY=

# ============================================
# AWS Services (SES & SNS)
# ============================================
# AWS Credentials
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# AWS SES (Email)
SES_FROM_EMAIL=noreply@swipesavvy.com
SES_FROM_NAME=SwipeSavvy
MOCK_EMAIL=true  # Set to false in production

# AWS SNS (SMS)
SNS_SENDER_ID=SwipeSavvy
MOCK_SMS=true  # Set to false in production

# Marketing Delivery Settings
MARKETING_BATCH_SIZE=100
MARKETING_RATE_LIMIT_DELAY=0.1

# Legacy SMS/Email (deprecated - use AWS instead)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

# ============================================
# Feature Flags
# ============================================
ENABLE_RAG=true
ENABLE_GUARDRAILS=true
ENABLE_IDENTITY_VERIFICATION=true
ENABLE_HUMAN_HANDOFF=true

# ============================================
# Cost Management
# ============================================
DAILY_COST_LIMIT_USD=1000
ALERT_THRESHOLD_USD=800

# ============================================
# FIS Global Payment One (Card Management)
# ============================================
FIS_CLIENT_ID=
FIS_CLIENT_SECRET=
FIS_API_URL=https://api-gw-uat.fisglobal.com
FIS_WEBHOOK_SECRET=
FIS_ENVIRONMENT=sandbox
