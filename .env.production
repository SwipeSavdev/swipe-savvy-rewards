# SwipeSavvy Production Environment Configuration
# All services use swipesavvy.com domain aliases

# ============================================
# PRODUCTION ENVIRONMENT
# ============================================
NODE_ENV=production
DEBUG=false

# ============================================
# DOMAIN ALIASES
# ============================================
# Main Website:     https://www.swipesavvy.com
# API Gateway:      https://api.swipesavvy.com
# Admin Portal:     https://admin.swipesavvy.com
# Wallet Web:       https://wallet.swipesavvy.com
# Mobile App (PWA): https://app.swipesavvy.com

# ============================================
# API CONFIGURATION
# ============================================
# Admin Portal (Vite)
VITE_API_BASE_URL=https://api.swipesavvy.com
VITE_API_TIMEOUT=30000

# Mobile App (Expo)
EXPO_PUBLIC_API_URL=https://api.swipesavvy.com
EXPO_PUBLIC_WS_URL=wss://api.swipesavvy.com/ws

# ============================================
# AI SERVICES - Together.AI
# ============================================
TOGETHER_API_KEY=${TOGETHER_API_KEY}
TOGETHER_API_KEY_GENERAL=${TOGETHER_API_KEY_GENERAL}
TOGETHER_API_KEY_MARKETING=${TOGETHER_API_KEY_MARKETING}

# ============================================
# DATABASE CONFIGURATION (AWS RDS)
# ============================================
DB_HOST=${RDS_ENDPOINT}
DB_PORT=5432
DB_NAME=swipesavvy_prod
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}
DB_SSL=true

# Connection Pool (Production)
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_IDLE_TIMEOUT=30000

# ============================================
# REDIS CACHE (AWS ElastiCache)
# ============================================
REDIS_URL=redis://${REDIS_ENDPOINT}:6379/0
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=600

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h

# CORS Origins - Production Domains
CORS_ORIGINS=https://admin.swipesavvy.com,https://wallet.swipesavvy.com,https://app.swipesavvy.com,https://www.swipesavvy.com

# ============================================
# SSL/TLS
# ============================================
SSL_ENABLED=true
SSL_CERTIFICATE_PATH=/etc/letsencrypt/live/swipesavvy.com/fullchain.pem
SSL_PRIVATE_KEY_PATH=/etc/letsencrypt/live/swipesavvy.com/privkey.pem

# ============================================
# OBSERVABILITY & MONITORING
# ============================================
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ENVIRONMENT=production

LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# EMAIL SERVICE - SendGrid
# ============================================
SENDGRID_API_KEY=${SENDGRID_API_KEY}
SENDGRID_FROM_EMAIL=noreply@swipesavvy.com
SENDGRID_FROM_NAME=SwipeSavvy

# ============================================
# SMS SERVICE - Twilio
# ============================================
TWILIO_ACCOUNT_SID=${TWILIO_ACCOUNT_SID}
TWILIO_AUTH_TOKEN=${TWILIO_AUTH_TOKEN}
TWILIO_PHONE_NUMBER=${TWILIO_PHONE_NUMBER}
TWILIO_VERIFY_SERVICE_SID=${TWILIO_VERIFY_SERVICE_SID}

# ============================================
# AWS CONFIGURATION
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}

# S3 Buckets
S3_BUCKET_KYC_DOCUMENTS=swipesavvy-kyc-documents
S3_BUCKET_STATIC_ASSETS=swipesavvy-static-assets

# CloudFront Distribution
CLOUDFRONT_DISTRIBUTION_ID=${CLOUDFRONT_DISTRIBUTION_ID}
CLOUDFRONT_DOMAIN=cdn.swipesavvy.com

# ============================================
# PAYMENT PROVIDERS
# ============================================
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# Plaid (Bank Linking)
PLAID_CLIENT_ID=${PLAID_CLIENT_ID}
PLAID_SECRET=${PLAID_SECRET}
PLAID_ENV=production
