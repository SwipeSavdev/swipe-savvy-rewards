# SwipeSavvy Production Environment Configuration
# Created: December 28, 2025 - Phase 8 Production Deployment

# ═════════════════════════════════════════════════════════════════════════════
# DATABASE CONFIGURATION
# ═════════════════════════════════════════════════════════════════════════════

# PostgreSQL Connection
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=swipesavvy_agents

# Connection Pool Configuration
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ═════════════════════════════════════════════════════════════════════════════
# SERVER CONFIGURATION
# ═════════════════════════════════════════════════════════════════════════════

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
ENVIRONMENT=production
DEBUG=false

# ═════════════════════════════════════════════════════════════════════════════
# CORS CONFIGURATION
# ═════════════════════════════════════════════════════════════════════════════

# Allow origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# ═════════════════════════════════════════════════════════════════════════════
# LOGGING CONFIGURATION
# ═════════════════════════════════════════════════════════════════════════════

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/swipesavvy/api.log

# ═════════════════════════════════════════════════════════════════════════════
# MONITORING & ALERTING
# ═════════════════════════════════════════════════════════════════════════════

# Monitoring
ENABLE_METRICS=true
ENABLE_PROFILING=false
ENABLE_TRACING=true

# Error Tracking
ENABLE_ERROR_TRACKING=true
ERROR_TRACKING_DSN=

# ═════════════════════════════════════════════════════════════════════════════
# SECURITY
# ═════════════════════════════════════════════════════════════════════════════

# API Keys
API_KEY_REQUIRED=false
SECRET_KEY=your-secret-key-here-change-in-production

# HTTPS
ENABLE_HTTPS=false
SSL_CERT_FILE=
SSL_KEY_FILE=

# ═════════════════════════════════════════════════════════════════════════════
# PERFORMANCE
# ═════════════════════════════════════════════════════════════════════════════

# Caching
ENABLE_REDIS=false
REDIS_URL=redis://localhost:6379

# Performance Thresholds
MAX_QUERY_TIME_MS=1000
SLOW_QUERY_LOG=true

# ═════════════════════════════════════════════════════════════════════════════
# FEATURE FLAGS
# ═════════════════════════════════════════════════════════════════════════════

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_AB_TESTING=true
ENABLE_OPTIMIZATION=true
ENABLE_PHASE4=true
