# ============================================================================
# ENVIRONMENT VARIABLES TEMPLATE
# Copy to .env in your project root and update with your values
# NEVER commit this file to version control - add to .gitignore
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Primary Database Connection (Backend write operations)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=swipesavvy_db
DB_USER=swipesavvy_backend
DB_PASSWORD=secure_password_123

# Read-Only Database Connection (Analytics, reporting)
DB_READ_HOST=localhost
DB_READ_PORT=5432
DB_READ_USER=swipesavvy_analytics
DB_READ_PASSWORD=analytics_password_456

# Connection Pool Settings
DB_POOL_SIZE=20
DB_IDLE_TIMEOUT=30000
DB_MAX_LIFETIME=1800000
DB_CONNECTION_TIMEOUT=10000
DB_REAP_INTERVAL=1000
DB_KEEP_ALIVES=true
DB_KEEP_ALIVES_IDLE_TIMEOUT=30000

# Database URL (Alternative to individual settings)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://swipesavvy_backend:secure_password_123@localhost:5432/swipesavvy_db

# SSL/TLS Configuration (Production Only)
DB_SSL=false
DB_SSL_MODE=disable
# DB_SSL_MODE options: disable, allow, prefer, require, verify-ca, verify-full
# DB_SSL_CERT=/path/to/client-cert.pem
# DB_SSL_KEY=/path/to/client-key.pem
# DB_SSL_ROOT_CERT=/path/to/ca-cert.pem

# ============================================================================
# BACKEND API CONFIGURATION
# ============================================================================

# Server Settings
NODE_ENV=development
PORT=8000
API_URL=http://localhost:8000
API_TIMEOUT=30000

# Session & Authentication
SESSION_SECRET=your_session_secret_here_change_in_production
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRATION=24h

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
# LOG_FORMAT options: json, simple, combined

# ============================================================================
# MOBILE APP CONFIGURATION
# ============================================================================

# API Endpoints
REACT_NATIVE_API_URL=http://localhost:8000
REACT_NATIVE_API_TIMEOUT=10000

# Feature Flags
FEATURE_FLAG_CACHE_TTL=300000
FEATURE_FLAG_SYNC_INTERVAL=600000

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_ENDPOINT=http://localhost:8000/api/analytics

# Feature Flag Defaults (if API unavailable)
FEATURE_FLAGS_DEFAULT_STATE=false

# ============================================================================
# ADMIN PORTAL CONFIGURATION
# ============================================================================

# React App Settings
REACT_APP_API_URL=http://localhost:8000
REACT_APP_API_TIMEOUT=10000
REACT_APP_LOG_LEVEL=debug

# Feature Flag Management
REACT_APP_FEATURE_FLAGS_API=http://localhost:8000/api/features

# Analytics Dashboard
REACT_APP_ANALYTICS_API=http://localhost:8000/api/analytics
REACT_APP_ANALYTICS_REFRESH_INTERVAL=60000

# Authentication
REACT_APP_AUTH_PROVIDER=local
# REACT_APP_AUTH_PROVIDER options: local, oauth, saml

# ============================================================================
# THIRD-PARTY SERVICE INTEGRATIONS
# ============================================================================

# Email Service
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@swipesavvy.com

# SMS Service
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway
PAYMENT_PROVIDER=stripe
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# Analytics
ANALYTICS_PROVIDER=mixpanel
MIXPANEL_TOKEN=your_mixpanel_token

# Cloud Storage
CLOUD_STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=swipesavvy-bucket

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Feature flag defaults (can be overridden via database)
FEATURE_TIER_PROGRESS_BAR=true
FEATURE_AMOUNT_CHIP_SELECTOR=true
FEATURE_PLATFORM_GOAL_METER=true
FEATURE_AI_CONCIERGE_CHAT=true
FEATURE_DARK_MODE=false
FEATURE_SOCIAL_SHARING=true
FEATURE_RECEIPT_GENERATION=true
FEATURE_COMMUNITY_FEED=false
FEATURE_NOTIFICATION_CENTER=false
FEATURE_ADVANCED_ANALYTICS=false

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# Sentry (Error tracking)
SENTRY_DSN=https://your_sentry_dsn
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# New Relic (APM)
NEW_RELIC_ENABLED=false
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=swipesavvy-api

# DataDog (Monitoring)
DATADOG_ENABLED=false
DATADOG_API_KEY=your_datadog_api_key
DATADOG_ENVIRONMENT=development

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Debug Mode
DEBUG=false
VERBOSE_LOGGING=false

# Mock Data
USE_MOCK_DATA=false
MOCK_DATA_SEED=12345

# Testing
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/swipesavvy_test
JEST_TIMEOUT=30000

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================
# These should be set via environment variables or secrets management
# DO NOT hardcode production values in this file

# CORS Configuration
CORS_ORIGINS=https://app.swipesavvy.com,https://admin.swipesavvy.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_MAX_AGE=86400000
SESSION_SECURE=true
SESSION_SAME_SITE=strict

# ============================================================================
# BACKUP & RECOVERY
# ============================================================================

# Automated Backups
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups

# Point-in-time Recovery
PITR_ENABLED=true
PITR_RETENTION_DAYS=7

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
# Remember to:
# 1. Copy this file to .env
# 2. Update values for your environment
# 3. Add .env to .gitignore
# 4. Never commit secrets to version control
# 5. Use environment-specific configuration for production
# 6. Rotate credentials regularly
# ============================================================================
