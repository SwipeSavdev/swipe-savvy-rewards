# SwipeSavvy Backend Configuration
# Copy this file to .env and update values for your environment

# ============================================================================
# Environment
# ============================================================================
ENVIRONMENT=development
DEBUG=false

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/swipesavvy_dev

# ============================================================================
# Authentication (JWT)
# ============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET_KEY=your-secret-key-min-32-chars-generated-by-openssl
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================================================
# CORS Configuration
# ============================================================================
# For development, defaults in config.py allow:
# - http://localhost:3000
# - http://localhost:5173
# - http://localhost:5174
# - http://127.0.0.1:3000
# - http://127.0.0.1:5173
# - http://127.0.0.1:5174

# For production, set ENVIRONMENT=production to use:
# - https://admin.swipesavvy.com
# - https://wallet.swipesavvy.com
# - https://swipesavvy.com

# ============================================================================
# External APIs
# ============================================================================

# OpenAI API (for AI features)
OPENAI_API_KEY=

# Together.ai API (for AI Concierge)
TOGETHER_API_KEY=

# Firebase
FIREBASE_CREDENTIALS={}
FIREBASE_DATABASE_URL=

# Authorize.Net Payment Processing
AUTHORIZE_NET_API_LOGIN_ID=
AUTHORIZE_NET_TRANSACTION_KEY=

# ============================================================================
# Email Configuration
# ============================================================================
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# ============================================================================
# Redis Configuration (Optional, for caching)
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================================================
# Demo Users (Development Only)
# ============================================================================
# For development, demo users are loaded from this environment variable
# Format: JSON string with user objects
DEMO_USERS={}

# ============================================================================
# Frontend Configuration (for admin portal)
# ============================================================================
VITE_API_BASE_URL=http://127.0.0.1:8000

# Application
DEBUG=False
LOG_LEVEL=INFO

# OpenAI (for AI features)
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_KEY

# Email Service
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
