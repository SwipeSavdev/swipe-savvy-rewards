# SwipeSavvy Environment Configuration Template
# Copy this file to .env and fill in your actual values
# ⚠️ NEVER commit .env files to git

# ============================================
# DEVELOPMENT ENVIRONMENT
# ============================================
NODE_ENV=development
DEBUG=true

# ============================================
# API CONFIGURATION
# ============================================
# Admin Portal (Vite)
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=30000

# Mobile App (Expo)
EXPO_PUBLIC_API_URL=http://localhost:8000
EXPO_PUBLIC_WS_URL=ws://localhost:8000/ws

# ============================================
# AI SERVICES - Together.AI
# ============================================
# ⚠️ CRITICAL: Get your API keys from https://api.together.xyz/settings/api-keys
# DO NOT share these keys or commit them to git

# Primary AI Service (Support/Concierge)
TOGETHER_API_KEY=your_primary_api_key_here

# General Purpose AI Service
TOGETHER_API_KEY_GENERAL=your_general_api_key_here

# AI Marketing Service
TOGETHER_API_KEY_MARKETING=your_marketing_api_key_here

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=swipesavvy_admin
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_SSL=false

# Connection Pool
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_POOL_IDLE_TIMEOUT=30000

# Query Configuration
DB_QUERY_TIMEOUT=30000
DB_MAX_RETRIES=3
DB_RETRY_DELAY=1000

# ============================================
# REDIS CACHE
# ============================================
REDIS_URL=redis://localhost:6379/0

# Cache TTLs (seconds)
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# JWT Configuration
JWT_SECRET=your_jwt_secret_minimum_32_characters_here
JWT_EXPIRES_IN=24h

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8081

# ============================================
# OBSERVABILITY & MONITORING
# ============================================
# Sentry Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# ============================================
# EMAIL SERVICE - SendGrid
# ============================================
# Get your API key from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@swipesavvy.com
SENDGRID_FROM_NAME=SwipeSavvy

# Email Templates (optional - for transactional emails)
SENDGRID_TEMPLATE_WELCOME=d-xxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_TEMPLATE_PASSWORD_RESET=d-xxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_TEMPLATE_VERIFICATION=d-xxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_TEMPLATE_TRANSACTION_ALERT=d-xxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# SMS SERVICE - Twilio
# ============================================
# Get your credentials from https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX
TWILIO_VERIFY_SERVICE_SID=your_verify_service_sid_here

# SMS Templates
SMS_OTP_MESSAGE=Your SwipeSavvy verification code is: {code}. Valid for 10 minutes.
SMS_TRANSACTION_ALERT=SwipeSavvy Alert: {amount} {type} at {merchant}. Reply STOP to opt out.
